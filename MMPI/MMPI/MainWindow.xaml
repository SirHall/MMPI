<Window x:Class="MMPI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mmpi="clr-namespace:MMPI"
        Title="MainWindow" Height="350" Width="525" x:ClassModifier="internal">
    <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
      <mmpi:QuestionView DataContext="{Binding Path=CurrentQuestion, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0"/>
    <Separator Grid.Row="1" Height="5"/>
    <StackPanel Grid.Row="3">
      <Grid HorizontalAlignment="Right">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto"/>
          <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
      <Button Command="{Binding Path=YesCommand}" Width="100" Height="25" Margin="5,5,5,5" HorizontalAlignment="Right" Content="Да" Grid.Column="0"/>
        <Button Command="{Binding Path=NoCommand}" Width="100" Height="25" Margin="5,5,5,5" HorizontalAlignment="Right" Content="Нет" Grid.Column="1"/>
      </Grid>
    </StackPanel>
  </Grid>
</Window>
